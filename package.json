{
    "name": "finnish-nhl-tracker",
    "version": "1.0.0",
    "private": true,
    "scripts": {
        "build": "vite build && cp -r data build/data",
        "dev": "vite dev",
        "preview": "vite preview",
        "test": "vitest run",
        "test:watch": "vitest",
        "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
        "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
        "lint": "biome check .",
        "format": "biome format --write .",
        "validate": "npm run lint && npm run check && npm run test",
        "validate:fix": "npm run format && npm run validate",
        "validate:watch": "concurrently \"npm run check:watch\" \"npm run lint -- --watch\" \"npm run test:watch\"",
        "data:fetch": ".venv/bin/python3 scripts/data_collection/finnish/fetch.py",
        "data:fetch:date": ".venv/bin/python3 scripts/data_collection/finnish/fetch.py",
        "data:fetch:season": ".venv/bin/python3 scripts/data_collection/season/fetch_season_games.py",
        "players:update": "node scripts/node_utils/player-cli.js update",
        "players:validate": "node scripts/node_utils/player-cli.js validate",
        "players:stats": "node scripts/node_utils/player-cli.js stats",
        "players:changes": "node scripts/node_utils/player-cli.js changes",
        "players:backup": "node scripts/node_utils/player-cli.js backup",
        "players:restore": "node scripts/node_utils/player-cli.js restore",
        "players:clean": "node scripts/node_utils/player-cli.js clean"
    },
    "devDependencies": {
        "@biomejs/biome": "^2.2.5",
        "@playwright/test": "^1.56.1",
        "@sveltejs/adapter-static": "^3.0.1",
        "@sveltejs/kit": "^2.49.2",
        "@sveltejs/vite-plugin-svelte": "^4.0.0-next.6",
        "@tailwindcss/postcss": "^4.1.16",
        "@types/node": "^25.0.3",
        "@vitest/ui": "^3.2.4",
        "autoprefixer": "^10.4.21",
        "concurrently": "^9.2.1",
        "jsdom": "^27.0.0",
        "postcss": "^8.5.6",
        "svelte": "^5.29.0",
        "svelte-check": "^4.0.0",
        "tailwindcss": "^4.1.16",
        "terser": "^5.44.0",
        "typescript": "^5.6.3",
        "vite": "^5.4.0",
        "vitest": "^3.2.4"
    },
    "type": "module",
    "dependencies": {
        "alpinejs": "^3.15.2",
        "flatpickr": "^4.6.13"
    }
}
