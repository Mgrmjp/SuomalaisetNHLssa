# Immutable content - allow aggressively caching
/_app/immutable/*
  Cache-Control: public, max-age=31536000, immutable

# Static assets (images, logos) - cache for 1 day
/nhl-logos/*
  Cache-Control: public, max-age=86400
/headshots/*
  Cache-Control: public, max-age=86400
/*.png
  Cache-Control: public, max-age=86400
/*.jpg
  Cache-Control: public, max-age=86400
/*.svg
  Cache-Control: public, max-age=86400
/*.ico
  Cache-Control: public, max-age=86400

# Service workers - do not cache
/service-worker.js
  Cache-Control: no-cache
/sw.js
  Cache-Control: no-cache

# Data files (json) - cache for 10 minutes (matches poll interval consideration)
/data/*
  Cache-Control: public, max-age=600

# HTML files - revalidate to ensure updates are seen immediately
/*.html
  Cache-Control: public, max-age=0, must-revalidate
/
  Cache-Control: public, max-age=0, must-revalidate
